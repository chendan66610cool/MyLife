  <div class="row">
    <%= form_for @word, :html => {:class => "col s12"} do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <input id="word" type="text" class="validate" name="word[word]">
          <label for="word">Word</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea id="explanation" class="materialize-textarea" name="word[explanation]"></textarea>
          <label for="explanation">Explanation</label>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
    <% end %>
  </div>

  <div class="list">
    <% @words_hash.each do |key, val| %>
      <ul class="collection with-header">
        <li class="collection-header"><h4><%= key %></h4></li>
        <li class="collection-item">
          <ul class="collapsible" data-collapsible="accordion">
            <% val.each do |word| %>
              <li>
                <div class="collapsible-header"><%= word.word %><span style="float:right;"><%= link_to 'X', word, method: :delete, data: { confirm: 'Are you sure?' }, style: "color:red" %></span></div>
                <div class="collapsible-body"><%= simple_format word.explanation %></div>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    <% end %>
  </div>
        